{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["scripts/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "vuex": ["node_modules/vuex/types/index.d.ts"]
    },
  },
  "vueCompilerOptions": { "target": 2.7 }
}
